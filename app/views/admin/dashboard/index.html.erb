<% content_for :title, "Admin Dashboard - La Reta" %>

<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-2">Dashboard</h1>
  <p class="text-gray-600">Welcome back, <%= current_admin_user.name %>!</p>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
          <span class="text-white text-sm font-bold">📁</span>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Categories</p>
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_categories] %></p>
      </div>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
          <span class="text-white text-sm font-bold">🍽️</span>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Menu Items</p>
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_menu_items] %></p>
        <p class="text-xs text-green-600"><%= @stats[:available_items] %> available</p>
      </div>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
          <span class="text-white text-sm font-bold">📋</span>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Total Orders</p>
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_orders] %></p>
        <p class="text-xs text-yellow-600"><%= @stats[:todays_orders] %> today</p>
      </div>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
          <span class="text-white text-sm font-bold">💰</span>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Today's Revenue</p>
        <p class="text-2xl font-bold text-gray-900">$<%= number_with_precision(@stats[:todays_revenue], precision: 2) %></p>
      </div>
    </div>
  </div>
</div>

<!-- Order Status Overview -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Active Orders</h3>
    <div class="space-y-3">
      <div class="flex justify-between items-center">
        <span class="text-orange-600">Pending</span>
        <span class="bg-orange-100 text-orange-800 px-2 py-1 rounded-full text-sm font-medium">
          <%= @stats[:pending_orders] %>
        </span>
      </div>
      <div class="flex justify-between items-center">
        <span class="text-blue-600">Preparing</span>
        <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-sm font-medium">
          <%= @stats[:preparing_orders] %>
        </span>
      </div>
      <div class="flex justify-between items-center">
        <span class="text-green-600">Ready</span>
        <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-sm font-medium">
          <%= @stats[:ready_orders] %>
        </span>
      </div>
    </div>
    
    <div class="mt-4 pt-4 border-t">
      <%= link_to "👨‍🍳 Kitchen Dashboard", admin_kitchen_path, 
          class: "w-full bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded text-center block transition-colors" %>
    </div>
  </div>
  
  <!-- Quick Actions -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
    <div class="space-y-3">
      <%= link_to admin_menu_items_path, 
          class: "flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
        <span class="text-2xl mr-3">🍽️</span>
        <div>
          <p class="font-medium">Manage Menu</p>
          <p class="text-sm text-gray-600">Add or edit menu items</p>
        </div>
      <% end %>
      
      <%= link_to admin_categories_path, 
          class: "flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
        <span class="text-2xl mr-3">📁</span>
        <div>
          <p class="font-medium">Categories</p>
          <p class="text-sm text-gray-600">Organize menu categories</p>
        </div>
      <% end %>
      
      <%= link_to admin_orders_path, 
          class: "flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
        <span class="text-2xl mr-3">📋</span>
        <div>
          <p class="font-medium">View Orders</p>
          <p class="text-sm text-gray-600">Order history and details</p>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Recent Activity -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Orders</h3>
    <div class="space-y-3">
      <% if @recent_orders.any? %>
        <% @recent_orders.limit(5).each do |order| %>
          <div class="flex justify-between items-center">
            <div>
              <p class="font-medium">#<%= order.order_number %></p>
              <p class="text-sm text-gray-600"><%= order.table_name %></p>
            </div>
            <div class="text-right">
              <span class="inline-block px-2 py-1 rounded-full text-xs font-medium <%= order.status_color %>">
                <%= order.status.humanize %>
              </span>
              <p class="text-sm text-gray-600">$<%= number_with_precision(order.total_amount, precision: 2) %></p>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500 text-center py-4">No recent orders</p>
      <% end %>
    </div>
    
    <% if @recent_orders.any? %>
      <div class="mt-4 pt-4 border-t">
        <%= link_to "View All Orders", admin_orders_path, 
            class: "text-green-600 hover:text-green-800 text-sm font-medium" %>
      </div>
    <% end %>
  </div>
</div>
