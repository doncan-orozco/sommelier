<% content_for :title, "Menu Items - Admin" %>

<div class="flex justify-between items-center mb-8">
  <div>
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Menu Items</h1>
    <p class="text-gray-600">Manage your restaurant's menu items</p>
  </div>
  <%= link_to "Add New Item", new_admin_menu_item_path, 
      class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg transition-colors" %>
</div>

<!-- Filter by Category -->
<div class="bg-white rounded-lg shadow p-4 mb-6">
  <div class="flex flex-wrap gap-2">
    <%= link_to admin_menu_items_path, 
        class: "px-4 py-2 rounded-full text-sm font-medium transition-colors #{params[:category_id].blank? ? 'bg-green-500 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" do %>
      All Items (<%= @menu_items.count %>)
    <% end %>
    
    <% @categories.each do |category| %>
      <%= link_to admin_menu_items_path(category_id: category.id), 
          class: "px-4 py-2 rounded-full text-sm font-medium transition-colors #{params[:category_id] == category.id.to_s ? 'bg-green-500 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" do %>
        <%= category.name %> (<%= category.menu_items.count %>)
      <% end %>
    <% end %>
  </div>
</div>

<!-- Menu Items Grid -->
<% if @menu_items.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @menu_items.each do |item| %>
      <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
        <!-- Image -->
        <div class="relative">
          <% if item.image.attached? %>
            <%= image_tag item.image, class: "w-full h-48 object-cover" %>
          <% else %>
            <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
              <span class="text-gray-500 text-lg">📷 No Image</span>
            </div>
          <% end %>
          
          <!-- Availability Toggle -->
          <div class="absolute top-2 right-2">
            <%= link_to toggle_availability_admin_menu_item_path(item), 
                method: :patch,
                class: "px-2 py-1 rounded-full text-xs font-bold #{item.available? ? 'bg-green-500 text-white' : 'bg-red-500 text-white'}" do %>
              <%= item.available? ? "Available" : "Unavailable" %>
            <% end %>
          </div>
        </div>
        
        <!-- Content -->
        <div class="p-4">
          <div class="flex justify-between items-start mb-2">
            <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">
              <%= item.category.name %>
            </span>
            <span class="text-sm text-gray-500">#<%= item.id %></span>
          </div>
          
          <h3 class="text-lg font-bold text-gray-900 mb-2"><%= item.name %></h3>
          
          <p class="text-gray-600 text-sm mb-3 line-clamp-2">
            <%= item.description || "No description available" %>
          </p>
          
          <div class="flex justify-between items-center mb-4">
            <span class="text-2xl font-bold text-green-600">
              $<%= number_with_precision(item.price, precision: 2) %>
            </span>
            <span class="text-sm text-gray-500">
              Sort: <%= item.sort_order %>
            </span>
          </div>
          
          <!-- Actions -->
          <div class="flex space-x-2">
            <%= link_to "Edit", edit_admin_menu_item_path(item), 
                class: "flex-1 bg-blue-500 hover:bg-blue-600 text-white text-center py-2 px-3 rounded text-sm font-medium transition-colors" %>
            <%= link_to "Delete", admin_menu_item_path(item), 
                method: :delete,
                confirm: "Are you sure you want to delete '#{item.name}'?",
                class: "flex-1 bg-red-500 hover:bg-red-600 text-white text-center py-2 px-3 rounded text-sm font-medium transition-colors" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <!-- Empty State -->
  <div class="bg-white rounded-lg shadow p-8 text-center">
    <div class="text-6xl mb-4">🍽️</div>
    <h3 class="text-xl font-bold text-gray-900 mb-2">No menu items found</h3>
    <p class="text-gray-600 mb-6">
      <% if params[:category_id].present? %>
        No items in this category. Try selecting a different category or add new items.
      <% else %>
        Start building your menu by adding your first item.
      <% end %>
    </p>
    <%= link_to "Add First Item", new_admin_menu_item_path, 
        class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg transition-colors" %>
  </div>
<% end %>
